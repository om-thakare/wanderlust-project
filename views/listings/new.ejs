<% layout("layouts/boilerplate") %> ✅



<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">

      <h3 class="fw-bold mb-4">Add New Listing</h3>

      <form 
        method="POST"
        action="/listings"
        enctype="multipart/form-data"
        class="needs-validation"
        novalidate
      >

        <!-- TITLE -->
        <div class="form-floating mb-3">
          <input 
            type="text"
            name="listing[title]"
            class="form-control"
            id="title"
            placeholder="Title"
            required
          >
          <label for="title">Title</label>
          <div class="invalid-feedback">Please enter title</div>
        </div>

        <!-- DESCRIPTION -->
        <div class="form-floating mb-3">
          <textarea
            name="listing[description]"
            class="form-control"
            id="description"
            placeholder="Description"
            style="height: 120px"
            required
          ></textarea>
          <label for="description">Description</label>
          <div class="invalid-feedback">Please enter description</div>
        </div>

        <!-- IMAGE -->
        <div class="mb-4">
          <label class="form-label fw-semibold">Upload Listing Image</label>
          <input
            type="file"
            name="image"
            class="form-control"
          >
        </div>

        <!-- PRICE + COUNTRY -->
        <div class="row">
          <div class="col-12 col-md-4">
            <div class="form-floating mb-3">
              <input
                type="number"
                name="listing[price]"
                class="form-control"
                id="price"
                placeholder="Price"
                required
              >
              <label for="price">Price (₹)</label>
              <div class="invalid-feedback">Enter valid price</div>
            </div>
          </div>

          <div class="col-12 col-md-8">
            <div class="form-floating mb-3">
              <input
                type="text"
                name="listing[country]"
                class="form-control"
                id="country"
                placeholder="Country"
                required
              >
              <label for="country">Country</label>
              <div class="invalid-feedback">Enter country</div>
            </div>
          </div>
        </div>

        <!-- LOCATION -->
        <div class="form-floating mb-3">
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            id="location"
            placeholder="Location"
            required
          >
          <label for="location">Location</label>
          <div class="invalid-feedback">Enter location</div>
        </div>

        <!-- CATEGORY -->
        <div class="form-floating mb-4">
          <select 
            name="listing[category]" 
            class="form-select"
            id="category"
            required
          >
            <option value="">Select Category</option>
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic cities">Iconic cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Castles">Castles</option>
            <option value="Amazing Pools">Amazing Pools</option>
            <option value="Farm">Farm</option>
            <option value="Camping">Camping</option>
            <option value="Arctic">Arctic</option>
            <option value="Hiking">Hiking</option>
            <option value="Beach">Beach</option>
          </select>
          <label for="category">Category</label>
          <div class="invalid-feedback">
            Please select a category
          </div>
        </div>

        <!-- BUTTON -->
        <button type="submit" class="btn btn-dark w-100 py-2">
          Add Listing
        </button>

      </form>

    </div>
  </div>
</div>

