<% layout("/layouts/boilerplate") %>

<style>
/* FILTERS */
#filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.filter {
  text-align: center;
  margin-right: 2rem;
  margin-top: 2rem;
  opacity: 0.7;
  transition: 0.3s ease;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
  transform: scale(1.1);
}

.filter p {
  font-size: 0.8rem;
}

/* Active category */
.active-filter {
  opacity: 1;
  transform: scale(1.1);
  border-bottom: 2px solid #fe424d;
}

/* TAX TOGGLE */
.tax-info {
  display: none;
}

.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.25rem;
  padding: 1rem;
  margin-left: 2rem;
  display: flex;
  align-items: center;
}
</style>

<!-- FILTER SECTION -->
<div id="filters">

  <a href="/listings?category=Trending<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Trending' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
  </a>

  <a href="/listings?category=Rooms<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Rooms' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
  </a>

  <a href="/listings?category=Iconic cities<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Iconic cities' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic cities</p>
    </div>
  </a>

  <a href="/listings?category=Mountains<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Mountains' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
  </a>

  <a href="/listings?category=Castles<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Castles' ? 'active-filter' : '' %>">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
  </a>

  <a href="/listings?category=Amazing Pools<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Amazing Pools' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
  </a>

  <a href="/listings?category=Farm<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Farm' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-building-wheat"></i></div>
      <p>Farm</p>
    </div>
  </a>

  <a href="/listings?category=Camping<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Camping' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-tent"></i></div>
      <p>Camping</p>
    </div>
  </a>

  <a href="/listings?category=Arctic<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Arctic' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Arctic</p>
    </div>
  </a>

  <a href="/listings?category=Hiking<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Hiking' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-person-hiking"></i></div>
      <p>Hiking</p>
    </div>
  </a>

  <a href="/listings?category=Beach<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" style="text-decoration:none; color:inherit;">
    <div class="filter <%= selectedCategory === 'Beach' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
  </a>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">
        Display total before taxes
      </label>
    </div>
  </div>

</div>

<!-- LISTINGS -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

  <% if (allListings.length === 0) { %>
    <h4>No listings found.</h4>
  <% } %>

  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">

        <img 
          src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" 
          class="card-img-top" 
          alt="<%= listing.title %> image" 
          style="height:20rem; object-fit:cover;"
        />

        <div class="card-img-overlay"></div>

        <div class="card-body">
          <p class="card-text"> 
            <b><%= listing.title %></b><br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>

      </div>
    </a>
  <% } %>
</div>

<script>
  // TAX TOGGLE
  let taxSwitch = document.getElementById("switchCheckDefault");

  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");

    for (let info of taxInfo) {
      info.style.display = taxSwitch.checked ? "inline" : "none";
    }
  });
</script>
