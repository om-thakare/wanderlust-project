<style>
/* ================= NAVBAR ================= */

.navbar {
  background: #fff;
  padding: 0.6rem 1rem;
}

/* Logo */
.navbar-brand i {
  font-size: 1.5rem;
  color: #fe424d;
}

/* Layout Fix */
.navbar-flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

/* Explore always visible */
.explore-link {
  font-weight: 500;
  margin-right: 15px;
  white-space: nowrap;
}

/* ================= SEARCH ================= */

.search-form {
  display: flex;
  align-items: center;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 50px;
  padding: 0.3rem;
  box-shadow: 0 1px 5px rgba(0,0,0,0.08);
  max-width: 500px;
  width: 100%;
}

.search-input {
  border: none;
  outline: none;
  box-shadow: none;
  border-radius: 50px;
  padding-left: 1rem;
  width: 100%;
}

.search-btn {
  background-color: #fe424d;
  color: #fff;
  border-radius: 50px;
  padding: 6px 14px;
  border: none;
  display: flex;
  align-items: center;
  gap: 6px;
  font-weight: 500;
}

.search-btn:hover {
  background-color: #e63946;
  color: #fff;
}

/* Right links */
.right-links {
  display: flex;
  align-items: center;
  gap: 15px;
}

/* ================= MOBILE FIX ================= */

@media (max-width: 768px) {

  .search-form {
    max-width: 100%;
  }

  .search-btn span {
    display: none; /* hide text on small screen */
  }

}
</style>


<nav class="navbar border-bottom sticky-top">
  <div class="container-fluid navbar-flex">

    <!-- LEFT: Logo + Explore -->
    <div class="d-flex align-items-center">
      <a class="navbar-brand me-3" href="/listings">
        <i class="fa-regular fa-compass"></i>
      </a>

      <a class="nav-link explore-link" href="/listings">
        Explore
      </a>
    </div>

    <!-- CENTER: SEARCH (ALWAYS VISIBLE) -->
    <form class="search-form mx-3" action="/listings" method="GET">
      <input
        class="form-control search-input"
        type="search"
        name="search"
        placeholder="Search destinations"
        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
      />

      <button class="search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
        <span>Search</span>
      </button>
    </form>

    <!-- RIGHT -->
    <div class="right-links">

      <a class="nav-link" href="/listings/new">
        Airbnb your home
      </a>

      <% if(!currentUser) { %>
        <a class="nav-link" href="/signup"><b>Signup</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
      <% } else { %>
        <form action="/logout" method="POST" class="m-0">
          <button type="submit" class="btn btn-link nav-link p-0">
            <b>Logout</b>
          </button>
        </form>
      <% } %>

    </div>

  </div>
</nav>
