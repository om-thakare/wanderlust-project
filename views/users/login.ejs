<% layout("layouts/boilerplate") %> 


<!-- Font Awesome (for icons if needed later) -->
<link rel="stylesheet"
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>

<style>
/* Light Red Background */
body {
  background: linear-gradient(135deg, #ffb3b3, #ff6b6b);
  min-height: 100vh;
}

/* Center Wrapper */
.login-wrapper {
  min-height: 85vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Glass Card */
.login-card {
  width: 500px;
  padding: 40px;
  border-radius: 20px;
  background: rgba(255,255,255,0.3);
  backdrop-filter: blur(20px);
  box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

/* Title */
.login-title {
  font-weight: 600;
  text-align: center;
  margin-bottom: 25px;
}

/* Inputs */
.form-control {
  border-radius: 30px;
  padding: 12px 18px;
  border: none;
  background: rgba(255,255,255,0.9);
}

.form-control:focus {
  box-shadow: none;
  border: 1px solid #ff6b6b;
}

/* Button */
.btn-login {
  background: #b30000;
  color: white;
  border-radius: 30px;
  padding: 12px;
  width: 100%;
  border: none;
  font-weight: 500;
}

.btn-login:hover {
  background: #800000;
}
</style>

<div class="container login-wrapper">

  <div class="login-card">

    <h2 class="login-title">Login</h2>

    <form action="/login" method="POST" class="needs-validation" novalidate>

      <div class="mb-3">
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          placeholder="Username"
          required
        >
        <div class="invalid-feedback">Enter username.</div>
      </div>

      <div class="mb-3">
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          placeholder="Password"
          required
        >
        <div class="invalid-feedback">
          Enter valid password.
        </div>
      </div>

      <button type="submit" class="btn-login">
        Login
      </button>

    </form>

    <p class="text-center mt-3">
      Donâ€™t have an account?
      <a href="/signup" style="color:#b30000; font-weight:600;">
        Sign Up
      </a>
    </p>

  </div>

</div>
